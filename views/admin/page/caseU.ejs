<%- include ../include/head %>
	<article  class="adm">
		<div class="main">
			<%- include ../include/left %>
			<div class="content">
				<form action="/users/cu/<%= doc._id %>/<%= doc.src %>" enctype='multipart/form-data' class="form-horizontal" role="form" method='post' >
				<div class="panel panel-info scr">
				    <div class="panel-heading">
				        <h3 class="panel-title">
				            案例修改
				        </h3>
				    </div>
				    <div class="panel-body">
				    		<div class="cuI form-group">
				    			<img src="/images/<%= doc.src %>" alt="">
				    		</div>
				        	<div class="form-group">
				        		<label for="" class="col-sm-2 control-label">图片</label>
								<div class="col-sm-5">
									<input type="file" class="form-control" multiple name="field1">
								</div>
				        	</div>
				        	<div class="form-group">
				        		<label for="" class="col-sm-2 control-label">首页显示</label>
				        		<div class="col-sm-5">
				        			<label class="radio-inline">
				        			     <input type="radio"  value="yes" name="show" 
				        			     <% if( doc.show === 'yes'){ %>
				        			     	checked="checked" 
				        			     <%  } %>
				        			     >是
				        			</label>
				        			<label class="radio-inline">
				        			     <input type="radio"  value="no" name="show"  
				        			     <% if(doc.show =="no"){ %>
				        			     	checked="checked" 
				        			     <% } %>
				        			     >否
				        			</label>
				        		</div>
				        	</div>
				    </div>
				    <div class="panel-footer">
				    	<button class="btn btn-success" type="submit">确定</button>
				    	<button class="btn" type="button">取消</button>
				    </div>
				</div>
				</form>
			</div>
		</div>
	</article>
	<% if(error){ %>
		<script type="text/javascript">
			alert('<%= error %>');
		</script>
	<% } %>
	<script type="text/javascript" src="/users/js/bootstrap.min.js"></script>
</body>
</html>
<%- include ../include/footer %>