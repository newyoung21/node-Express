<%- include ../include/head %>
	<article  class="adm">
		<div class="main">
			<%- include ../include/left %>
			<div class="content">
				<div class="panel panel-info scr">
				    <div class="panel-heading">
				        <h3 class="panel-title">
				            新闻列表<a href="/users/aN" class="add">添加新闻</a>
				        </h3>
				    </div>
				    <div class="panel-body">
				        <div class="table-responsive">
				        	<table class="table table-bordered">
				        		<thead>
				        			<tr>
				        				<th>排序</th>
				        				<th>标题</th>
				        				<th>是否显示</th>
				        				<th>添加时间</th>
				        				<th>操作</th>
				        			</tr> 
				        		</thead>
				        		<tbody>
				        			<% doc.forEach(function(d,index){ %>
										<tr>
											<td></td>
											<td><%= d.title %></td>
											<td><%= d.show %></td>
											<td><%= d.time.day %></td>
											<td>
												<a href="/modifyN/<%= d._id %>" class="btn" >修改</a>
												<a href="/removeN/<%= d._id %>" class="btn btn-warning" onclick="return confirm('确定要删除吗？');">删除</a>
											</td>
										</tr>
				        			<% }) %>
				        		</tbody>
				        	</table>
				        </div>
				    </div>
				</div>
			</div>
		</div>
	</article>
	<% if(error){ %>
		<script type="text/javascript">
			alert('<%= error %>');
		</script>
	<% } %>
	<% if(success){ %>
		<script type="text/javascript">
			alert('<%= success %>');
		</script>
	<% } %>
	<script type="text/javascript" src="/users/js/bootstrap.min.js"></script>
</body>
</html>
<%- include ../include/footer %>