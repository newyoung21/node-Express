<%- include ../include/head %>
	<article  class="adm">
		<div class="main">
			<%- include ../include/left %>
			<div class="content">
				<div class="panel panel-info scr">
				    <div class="panel-heading">
				        <h3 class="panel-title">
				            留言列表
				        </h3>
				    </div>
				    <div class="panel-body">
				        <div class="table-responsive">
				        	<table class="table table-bordered">
				        		<thead>
				        			<tr>
				        				<th>称呼</th>
				        				<th>电话</th>
				        				<th>地址</th> 
				        				<th>内容</th>
				        				<th>操作</th> 
				        			</tr> 
				        		</thead>
				        		<tbody>
				        			<% doc.forEach(function(d,index){ %>
										<tr>
											<td><%= d.company %></td>
											<td><%= d.telphone %></td>
											<td><%= d.address %></td>
											<td><%= d.content %></td>
											<td>
												<a href="/removeL/<%= d._id %>" class="btn btn-warning" onclick="return confirm('确定要删除吗？');">删除</a>
											</td>
										</tr>
				        			<% }) %>
				        		</tbody>
				        	</table>
				        </div>
				    </div>
				</div>
			</div>
		</div>
	</article>
	<% if(error){ %>
		<script type="text/javascript">
			alert('<%= error %>');
		</script>
	<% } %>
	<% if(success){ %>
		<script type="text/javascript">
			alert('<%= success %>');
		</script>
	<% } %> 
	<script type="text/javascript" src="/users/js/bootstrap.min.js"></script>
</body>
</html>
<%- include ../include/footer %>