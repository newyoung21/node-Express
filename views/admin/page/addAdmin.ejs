<%- include ../include/head %>
	<article  class="adm">
		<div class="main">
			<%- include ../include/left %>
			<div class="content">
				<form action="/users/addAdmin" class="form-horizontal" role="form" method='post' >
				<div class="panel panel-info scr">
				    <div class="panel-heading">
				        <h3 class="panel-title">
				          管理员添加<a href="/users/adminList" class="add">管理员列表</a> 
				        </h3>
				    </div>
				    <div class="panel-body">
				        	<div class="form-group">
				        		<label for="" class="col-sm-2 control-label">角色列表</label>
								<div class="col-sm-5">
									<label class="radio-inline">
									     <input type="radio"  value="文员" name="role">文员
									</label>
									<label class="radio-inline">
									     <input type="radio"  value="程序员" name="role"
										   
									     >程序员
									</label>
								</div>
				        	</div>
				        	<div class="form-group">
				        	  	<label for="" class="control-label col-sm-2">
				        	  		用户名:
				        	  	</label>
				        	 	<div class="col-sm-5">
				        	 		<input type="text" class="form-control" name="username">
				        	 	</div>
				        	</div>
				        	<div class="form-group">
				        	  	<label for="" class="control-label col-sm-2">
				        	  		密码：
				        	  	</label>
				        	 	<div class="col-sm-5">
				        	 		<input type="password" class="form-control" name="password">
				        	 	</div>
				        	</div>
				        	<div class="form-group">
				        	  	<label for="" class="control-label col-sm-2">
				        	  		确认密码：
				        	  	</label>
				        	 	<div class="col-sm-5">
				        	 		<input type="password" class="form-control" name="cpassword">
				        	 	</div>
				        	</div>
				    </div>
				    <div class="panel-footer">
				    	<button class="btn btn-success" type="submit">确定</button>
				    	<button class="btn" type="button">取消</button>
				    </div>
				</div>
				</form>
			</div>
		</div>
	</article>
	<% if(error){ %>
		<script type="text/javascript">
			alert("<%= error %>");
		</script>
	<% } %>
	<script type="text/javascript" src="/users/js/bootstrap.min.js"></script>
</body>
</html>
<%- include ../include/footer %>