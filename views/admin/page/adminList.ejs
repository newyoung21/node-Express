<%- include ../include/head %>
	<article  class="adm">
		<div class="main">
			<%- include ../include/left %>
			<div class="content">
				<div class="panel panel-info scr">
				    <div class="panel-heading">
				        <h3 class="panel-title">
				            新闻列表<a href="/users/addAdmin" class="add">添加管理员</a>
				        </h3>
				    </div>
				    <div class="panel-body">
				        <div class="table-responsive">
				        	<table class="table table-bordered">
				        		<thead>
				        			<tr>
				        				<th>用户名</th>
				        				<th>角色</th>
				        				<th>操作</th>
				        			</tr> 
				        		</thead>
				        		<tbody>
									<% user.forEach(function(u,index){ %>
										<tr>
											<td><%= u.name %></td>
											<td><%= u.role %></td>
											<td>
												<a href="/edit/<%= u._id %>" class="btn" >修改</a>
												<a href="/removeU/<%= u._id %>" class="btn btn-warning" onclick="return confirm('确定要删除吗？');">删除</a>
											</td>
										</tr>
									<% }) %>	
				        		</tbody>
				        	</table>
				        </div>
				    </div>
				</div>
			</div>
		</div>
	</article>
	<% if(error){ %>
		<script type="text/javascript">
			alert('<%= error %>');
		</script>
	<% } %>
	<% if(success){ %>
		<script type="text/javascript">
			alert('<%= success %>');
		</script>
	<% } %>
	<script type="text/javascript" src="/users/js/bootstrap.min.js"></script>
</body>
</html>
<%- include ../include/footer %>